{
  "name": "hono-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready REST API boilerplate using Hono with Bun runtime",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.js",
    "start": "NODE_ENV=production bun run src/index.js",
    "test": "bun test",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/swagger-ui": "^0.5.0",
    "zod": "^3.24.0",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.0"
  }
}
